<h1>Listing time_tables</h1>

<table>
  <tr>
    <th>User</th>
    <th>Fixed start hours</th>
    <th>Fixed start minutes</th>
    <th>Fixed end hours</th>
    <th>Fixed end minutes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @time_tables.each do |time_table| %>
  <tr>
    <td><%= time_table.user %></td>
    <td><%= time_table.fixed_start_hours %></td>
    <td><%= time_table.fixed_start_minutes %></td>
    <td><%= time_table.fixed_end_hours %></td>
    <td><%= time_table.fixed_end_minutes %></td>
    <td><%= link_to 'Show', time_table %></td>
    <td><%= link_to 'Edit', edit_time_table_path(time_table) %></td>
    <td><%= link_to 'Destroy', time_table, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

