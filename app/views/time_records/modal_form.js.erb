// action name in header
var action_name = "<%= controller.action_name.capitalize; %>";
$("#modalHeaderLabel").html(action_name + " <%= strf_day(@time_record.date) %>");
// ajax form
$("#modalBody").html("<%= escape_javascript(render :partial => 'form', :locals => {:modal => true}) %>");
// add click event handler to save button on modal.
$("#modalFormSubmit").on("click", function () {$("form:first").submit();});
// show modal
$("#modalForm").modal("show");
